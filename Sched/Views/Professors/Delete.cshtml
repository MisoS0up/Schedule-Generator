@model Sched.Models.Domain.Professor

@{
    ViewData["Title"] = "Delete";
}



<div class="container">
    <div class="text-center">
        <h1>Delete Professor</h1>

       
        <div>
      
            <hr />
            <div class="text-center">
             
                <p>
                    <strong>@Html.DisplayNameFor(model => model.Name)</strong> : @Html.DisplayFor(model => model.Name)
                </p>
                <p>
                    <strong>Department Name</strong> : @Html.DisplayFor(model => model.Department.Name)
