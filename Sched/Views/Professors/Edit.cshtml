@model Sched.Models.Domain.Professor

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <h1> Edit Professor </h1>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProfessorId" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DepartmentId" class="control-label"></label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DeptName"></select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="text-center">
                            <div class="form-group">
                                <button type="submit" value="Save" class="btn btn-outline-success" > <i class="fas fa-save"></i> Save </button>
                                <a asp-action="Index"class="btn btn-warning"><i class="fas fa-list"></i> Back to List</a>
                            </div>
                        </div>
                      
                    </form>
                </div>
            </div>

            
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
