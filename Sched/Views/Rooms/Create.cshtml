@model Sched.Models.Domain.Room

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">

            <h1>Create a Room</h1>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="RoomId" class="control-label"></label>
                            <input asp-for="RoomId" class="form-control" value="@ViewBag.NextRoomId"/>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br />

                        <div class="text-center">
                            <div class="form-group">
                                <button type="submit" value="Create" class="btn btn-outline-success"> <i class="fas fa-file-circle-plus"></i> Create</button>
                                <a class="btn btn-warning" asp-action="Index"><i class="fas fa-list"></i> Back to List</a>
                            </div>
                        </div>
                     
                    </form>
                </div>
            </div>

          

        </div>

    </div>

</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
