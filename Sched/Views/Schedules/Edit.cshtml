@model Sched.Models.Domain.Schedule

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="text-center">Edit Schedule</h1>
         
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ScheduleId" />
                <div class="form-group">
                    <label class="control-label">Professor</label>
                    <select asp-for="ProfessorId" class="form-control" asp-items="ViewBag.ProfessorId"></select>
                    <span asp-validation-for="ProfessorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">Course</label>
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Room</label>
                    <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                    <span asp-validation-for="RoomId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">Time Slot</label>
                    <select asp-for="TimeslotId" class="form-control" asp-items="ViewBag.TimeslotId"></select>
                    <span asp-validation-for="TimeslotId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">Day</label>
                    <select asp-for="DayId" class="form-control" asp-items="ViewBag.DayId"></select>
                    <span asp-validation-for="DayId" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group text-center">
                    <button class="btn btn-outline-success" type="submit" value="Save" class="btn btn-primary"> <i class="fa fa-save"></i> Save </button> |
                    <a class="btn btn-warning" asp-action="Index"><i class="fas fa-list"></i> Back to List</a>
                </div>
            </form>
            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@if (TempData["ErrorMessage"] != null)
{
    <div class="position-fixed top-0 end-0 p-3">
        <div id="errorToast" class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="bg-danger text-light">
                <div class="toast-body">
                    <i class="fa-sharp fa-solid fa-circle-exclamation fa-bounce" style="color: #ffffff;"></i>
                    @TempData["ErrorMessage"]
                </div>
            </div>

        </div>
    </div>

    <script src="~/js/site.js">

    </script>







}
