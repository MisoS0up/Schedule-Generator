@model Sched.Models.Domain.Schedule

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="text-center">
        <h1>Schedule Details</h1>

        <div>
            <hr />
            <dl class="row table table-hover">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Day)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Day.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Professor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Professor.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Room)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Timeslot)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Timeslot.TimeslotDisplay)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-success text-light btn-sm" asp-action="Edit" asp-route-id="@Model?.ScheduleId">Edit</a> |
            <a class="btn btn-warning text-light btn-sm" asp-action="Index">Back to List</a>
        </div>

    </div>

</div>
